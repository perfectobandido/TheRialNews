<h1>Comentarios</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Ver comentario", comment %>
    </p>
  <% end %>
</div>
<% if user_signed_in? %>
    <%= link_to "Nuevo comentario", new_comment_path, class: "btn btn-success" %>
<% end %>