<p style="color: green"><%= notice %></p>

<%= render @news_article %>

<div class="container mt-5"> 
  
  <%= link_to "Volver a la lista de noticias", news_articles_path, class: "btn btn-primary" %>
  <% if user_signed_in? %>
     <% if current_user.role == 'admin' %>
        <div class="btn-group">
          <%= link_to "Editar noticia", edit_news_article_path(@news_article), class: "btn btn-warning mr-2" %> &nbsp;
          <%= button_to "Borrar noticia", @news_article, method: :delete, class: "btn btn-danger ml-2" %>
        </div>
      <% end %>
  <% end %>   
</div>
